{
  "name": "aws-console-masking",
  "displayName": "AWS Console Masking",
  "version": "0.0.2",
  "description": "AWSコンソール画面の機密情報を黒塗りする拡張機能",
  "author": "asano.haruki",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.6.2",
    "@types/chrome": "0.1.4",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8",
    "prettier": "3.6.2",
    "svgo": "^4.0.0",
    "typescript": "5.9.2"
  },
  "pnpm": {
    "overrides": {
      "svgo": "^4.0.0"
    }
  },
  "plasmo": {
    "popup": {
      "entry": "src/popup/index.tsx"
    }
  },
  "manifest": {
    "host_permissions": [
      "https://*.console.aws.amazon.com/*",
      "https://console.aws.amazon.com/*"
    ],
    "permissions": [
      "storage",
      "tabs"
    ]
  }
}
